{
	"author": "kuafuwang",
	"name": "lpg",
	"bugs": {
		"url": "https://github.com/kuafuwang/LPG-VScode/issues"
	},
	"categories": [],
	"description": "Language server for lpg2",
	"homepage": "https://github.com/kuafuwang/LPG-VScode/blob/master/README.md",
	"keywords": [
		"LPG",
		"lpg"
	],
	"license": "MIT",
	"publisher": "kuafuwang",
	"repository": {
		"type": "git",
		"url": "https://github.com/kuafuwang/LPG-VScode"
	},
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.48.0"
	},
	"activationEvents": [
		"onLanguage:lpg2"
	],
	"main": "./out/extension",
	"contributes": {
		"languages": [
			{
				"id": "lpg2",
				"extensions": [
					".g",
					".gi",
					".lpg2"
				]
			}
		],
		"commands": [

			{
				"command": "lpg.call-graph",
				"title": "Show Grammar Call Graph"
			},
			{
                "command": "lpg.rrd.singleRule",
                "title": "Show Railroad Diagram for Rule"
            },
            {
                "command": "lpg.rrd.allRules",
                "title": "Show Railroad Diagram for all Rules"
            },
			{
				"command": "lpg.inlineNonTerminal",
				"title": "Inline Non-Terminal"
			},
			{
				"command": "lpg.MakeLeftRecursive",
				"title": "Make Left Recursive"
			},
			{
				"command": "lpg.makeEmpty",
				"title": "Make Empty"
			},
			{
				"command": "lpg.MakeNonEmpty",
				"title": "Make Non-Empty"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "resourceLangId == lpg2",
					"command": "lpg.call-graph",
					"group": "lpg2@1"
				},
				{
					"when": "resourceLangId == lpg2",
					"command": "lpg.rrd.singleRule",
					"group": "lpg2@1"
				},
				{
					"when": "resourceLangId == lpg2",
					"command": "lpg.rrd.allRules",
					"group": "lpg2@1"
				},
				{
					"when": "resourceLangId == lpg2",
					"command": "lpg.inlineNonTerminal",
					"group": "lpg2@2"
				},
				{
					"when": "resourceLangId == lpg2",
					"command": "lpg.MakeLeftRecursive",
					"group": "lpg2@2"
				},
				{
					"when": "resourceLangId == lpg2",
					"command": "lpg.makeEmpty",
					"group": "lpg2@2"
				},
				{
					"when": "resourceLangId == lpg2",
					"command": "lpg.MakeNonEmpty",
					"group": "lpg2@2"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 10000,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm install",
		"compile": "tsc -p ./"
	},
	"dependencies": {
		"fs-extra": "^9.0.1",
	    "d3": "^5.9.0",
		"abort-controller": "3.0.0",
		"vscode-languageclient": "7.0.0-next.9",
		"winston": "^3.2.1",
		"winston-daily-rotate-file": "^3.10.0"

	},
	"devDependencies": {
	
		"@types/expect": "^24.3.0",
		"@types/fs-extra": "^9.0.10",
		"@types/glob": "^7.1.3",
		"@types/lodash": "^4.14.168",
		"@types/mocha": "^8.2.2",
		"@types/node": "^14.14.37",
		"@types/vscode": "1.55.0",
		"glob": "^7.1.4",
		"mocha": "^7.1.0",
		"tslint": "^5.16.0",
		"typescript": "^3.8.3",
		"vsce": "^1.75.0",
		"vscode-test": "^1.3.0",
		"@types/lodash.findindex": "^4.6.6",
		"lodash.findindex": "^4.6.0",
		"lodash.template": ">=4.5.0"
	}
}
